{{!--   <span class="currency-display-mark">{{view.currency}}</span><span class="currency-display-dollars">{{view.dollars}}</span><span class="currency-display-cents">{{view.cents}}</span>
 --}}
{{#if view.decimals}}
  <span class="currency-display-mark">{{view.currency}}</span><span class="currency-display-dollars">{{view.dollars}}</span><span class="currency-display-decimals-value">.</span><span class="currency-display-cents currency-display-with-decimals">{{view.cents}}</span>
{{else}}
  <span class="currency-display-mark">{{view.currency}}</span><span class="currency-display-dollars">{{view.dollars}}</span><span class="currency-display-cents">{{view.cents}}</span>
{{/if}}
