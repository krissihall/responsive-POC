html, body
  -webkit-font-smoothing antialiased

.container,
.container-fluid
  padding-left 0
  padding-right 0
  overflow hidden
  
.aeoicon, .glyphicon
  z-index 2
  
.form-control-feedback
  z-index 3

.clickable
  cursor pointer
  
.well
  padding $padding-base-horizontal
  p
    &:first-child
      margin-top 0
      
.section
  padding $padding-base-vertical $padding-base-horizontal
  
.element-label
  display table
  width 100%
  height 100%
  min-height inherit
  .inner
    text-align center
    text-transform uppercase
    height 100%
    width 100%
    display table-cell
    color $gray
    vertical-align middle
    font-size-to-em(25)

header
  position relative
  border-bottom 1px solid $gray-disabled
  .ae-logo
    display block
    font-size-to-em(150)
    &:before
      padding-left $padding-large-horizontal
  .aeoicon-aeo-eagle
    font-size-to-em(60)
  .aeoicon-aeo-eagle
    text-align center
    padding $padding-base-vertical 0
  .header-hamburger
    font-size-to-em(40)
    text-align center
  .bag-count-icon
    position relative
    text-align center
    span
      position relative
      text-align center
      font-size-to-em(54)
    .bag-icon-count
      font-size-to-em(18)
      text-align center
      position absolute
      width 100%
      height 100%
      margin-bottom 0
      top 34%
      left 0
      right 0
    &:hover
      text-decoration none
  .header-navigation
    vertical-align bottom
    height 100%
      
.section
  padding 0 $padding-base-horizontal
