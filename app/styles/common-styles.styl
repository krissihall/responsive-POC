html, body
  -webkit-font-smoothing antialiased

.disableScroll
  overflow hidden
  position fixed /* Necessary for iOS devices */
  width 100% /* Necessary to keep body tag in viewport on desktop */

a
  cursor pointer
  transition()
  &:hover
    transition()

.container,
.container-fluid
  padding-left 0
  padding-right 0
  overflow hidden
  
.aeoicon, .glyphicon
  z-index 2
  
.form-control-feedback
  z-index 3

.clickable
  cursor pointer
  
.well
  padding $padding-base-horizontal
  p
    &:first-child
      margin-top 0
      
.section
  padding $padding-base-vertical $padding-base-horizontal
  
.element-label
  display table
  width 100%
  height 100%
  min-height inherit
  .inner
    text-align center
    text-transform uppercase
    height 100%
    width 100%
    display table-cell
    color $gray
    vertical-align middle
    font-size-to-em(25)
      
.section
  padding 0 $padding-base-horizontal
  
.aeo-input
  transition()
  
.lite-font
  color $gray-lighter
