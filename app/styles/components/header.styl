header
  position relative
  .header-promo-tag
    padding-right 0
    p
      margin 0
      font-size-to-em(14)
      @media screen and (max-width: $screen-sm-max)
        text-align center
        font-size-to-em(18)
  .ae-logo
    display block
    color $brand-primary
    font-size-to-em(150)
    &:before
      padding-left $padding-large-horizontal
  .aeoicon-aeo-eagle
    font-size-to-em(60)
    color $brand-primary
  .aeoicon-aeo-eagle
    text-align center
    padding $padding-base-vertical 0
  .header-hamburger
    font-size-to-em(40)
    text-align center
  .bag-count-icon
    position relative
    text-align center
    span
      position relative
      text-align center
      font-size-to-em(54)
    .bag-icon-count
      font-size-to-em(18)
      text-align center
      position absolute
      width 100%
      height 100%
      margin-bottom 0
      top 34%
      left 0
      right 0
    &:hover
      text-decoration none
  .header-navigation
    vertical-align bottom
    height 100%
    font-size-to-em(20)
  .header-navigation-hamburger
    position relative
    z-index 2
    .nav > li > a
      text-align left !important
    .header-auxiliary-nav-links
      .nav > li > a
        padding $padding-small-vertical $padding-small-horizontal
        text-align left !important
        background $gray-lightest
        &:hover
          background darken($gray-lightest, 5%)
      .nav-sm
        font-size-to-em(15)
    .header-search-form
      display block
      width 100%
      padding $padding-base-vertical $padding-base-horizontal
      .aeo-input
        height auto
        margin 0
      .header-search-form-xs-sm
        margin-left -15px
  .header-auxiliary-nav
    font-size-to-em(15)
    padding 0
    .nav > li > a
      padding $padding-small-vertical $padding-small-horizontal
  .header-search
    padding $padding-base-vertical 0
    text-align left
    .header-search-form
      width auto
      display inline-block
      .header-search-input
        margin 0
        width auto
        max-width 135px
        height auto
        label
          background none
        input
          max-width 135px
          width auto
        .form-control
          margin 0
          height auto
          &.not-empty
            height auto
      .header-search-button
        height auto
        margin 0
        padding $padding-small-vertical
        font-size-to-em(25)
        .aeoicon
          display block
          text-align right
        &:hover
          text-decoration none
